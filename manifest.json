{
  "manifest_version": 3,
  "name": "DeepRead AI",
  "version": "1.0",
  "description": "Remova paywalls, an√∫ncios e organize sua leitura com IA.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "128": "assets/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/Readability.js", "src/content.js"],
      "css": ["src/styles.css"],
      "run_at": "document_start"
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "icons": {
    "128": "assets/icon.png"
  }
}
