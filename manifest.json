{
  "manifest_version": 3,
  "name": "DeepRead AI",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "css": ["src/styles.css"]
    },
    {
    "matches": ["<all_urls>"],
    "js": ["lib/Readability.js", "src/content.js"],
    "css": ["src/styles.css"]
  },
    "declarative_net_request": {
  "rule_resources": [{
    "id": "ruleset_1",
    "enabled": true,
    "path": "rules.json"
  }]
},
"permissions": [
  "storage",
  "declarativeNetRequest",
  "activeTab"
]
  ]
}
